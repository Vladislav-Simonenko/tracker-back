datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                Int      @id @default(autoincrement())
  email             String   @unique
  fullname          String?
  password          String
  login             String   @unique
  role              Role     @default(USER)
  isVerified        Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("user")
}

model Item {
  id                Int      @id @default(autoincrement())
  name_rus          String
  name_eng          String
  homebrew          Boolean
  price             String?
  source            String
  weight            String?
  description       String?
  categories        String[]
  icon              String?
  world_id          BigInt?
}

model World {
  id                Int      @id @default(autoincrement())
  createdAt         DateTime @default(now())
  user_id           Int
  name              String
  sources           String[]
}

enum Role {
  USER
  ADMIN
  MASTER
}
