datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                Int      @id @default(autoincrement())
  email             String   @unique
  fullname          String?
  password          String
  login             String   @unique
  role              Role     @default(USER)
  //@note: верификация по дефолту в состоянии true, это временное решение до подключения сервиса верификации
  isVerified        Boolean  @default(true)
  verificationToken String
  resetToken        String?
  refreshToken      String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("user")
}

enum Role {
  USER
  ADMIN
  MASTER
}
